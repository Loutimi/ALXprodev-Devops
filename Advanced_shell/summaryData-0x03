#!/bin/bash

# Set output CSV and data folder
OUTPUT_FILE="pokemon_report.csv"
DATA_DIR="pokemon_data"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Process each PokÃ©mon JSON file
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file" | awk '{printf "%.2f", $1 / 10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.2f", $1 / 10}')
    
    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

# Notify user
echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Show contents of CSV
cat "$OUTPUT_FILE"

# Calculate averages with awk
awk -F',' 'NR > 1 {
    total_height += $2;
    total_weight += $3;
    count += 1
}
END {
    if (count > 0) {
        printf "\nAverage Height: %.2f m\n", total_height / count
        printf "Average Weight: %.2f kg\n", total_weight / count
    }
}' "$OUTPUT_FILE"

