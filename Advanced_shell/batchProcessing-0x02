
#!/bin/bash

POKEMON_LIST=(bulbasaur ivysaur venusaur charmander charmeleon)
ERROR_FILE="errors.txt"

# Ensure clean error file
> "$ERROR_FILE"

# Loop through each PokÃ©mon and fetch data
for name in "${POKEMON_LIST[@]}"; do
    API_URL="https://pokeapi.co/api/v2/pokemon/$name"
    OUTPUT_FILE="${name}.json"
    ATTEMPT=1
    SUCCESS=0

    echo "Fetching data for $name..."

    while [ $ATTEMPT -le 3 ]; do
        curl -s -f "$API_URL" -o "$OUTPUT_FILE"

        if [ $? -eq 0 ]; then
            echo "Saved data to $OUTPUT_FILE"
            SUCCESS=1
            break
        else
            echo "Attempt $ATTEMPT failed for $name..."
            ATTEMPT=$((ATTEMPT+1))
            sleep 1
        fi
    done

    if [ $SUCCESS -ne 1 ]; then
        echo "Failed to fetch data for $name after 3 attempts at $(date)" >> "$ERROR_FILE"
        echo "Skipped $name"
    fi

    sleep 1  # To avoid hitting API rate limits
done

