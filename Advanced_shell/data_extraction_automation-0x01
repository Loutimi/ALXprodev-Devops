#!/bin/bash

# Extract fields using jq
name=$(jq -r '.name' pikachu.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' pikachu.json | sed 's/.*/\u&/')
weight=$(jq -r '.weight' pikachu.json | awk '{printf "%.1f", $1 / 10}')
height=$(jq -r '.height' pikachu.json | awk '{printf "%.1f", $1 / 10}')

# Formatted weight and height
formatted_weight=$(awk "BEGIN {printf \"%.0f\", $weight/10}")
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height/10}")

# Output the result
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

